{
  "manifest_version": 3,
  "name": "Github Multiple Accounts",
  "version": "0.1.0",
  "description": "An extension that allows you to easily switch between Github accounts",
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "Github Multiple Accounts",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["storage", "cookies", "<all_urls>", "tabs"],
  "host_permissions": ["<all_urls>"]
}
